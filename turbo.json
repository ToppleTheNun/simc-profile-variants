{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^update"]
    },
    "lint": {
      "dependsOn": ["^update"]
    },
    "typecheck": {
      "dependsOn": ["^update"]
    },
    "update": {
      "dependsOn": ["^update"]
    }
  }
}
